    elif prvni == "start":
        break


cislicove_cisla = list("0123456789")


number = 0

cislice = []

cislo = str(random.randint(1, 9))
cislice.append(cislo)
cislicove_cisla.remove(str(cislo))

cislice.extend(random.sample(cislicove_cisla, 3))

print(cislice)
pokusy = 0
tip = 0
while True:
    tip = list(input("zadej číslo:   ")) #udela z tipu list
    print(tip)

    if len(tip) == 4 and tip[0] != "0" and len(set(tip)) == 4 and "".join(tip).isnumeric():
        

    
        cows = 0
        bulls = 0

#vyhodnoceni tipu 
        for i in range(4):
            if cislice[i] in tip:
                if cislice[i] == tip[i]:
                    bulls += 1
                else:
                    cows += 1
        print(f"bulls: {bulls}, cows: {cows}")
        pokusy += 1

#zaver hry
        if bulls == 4:
            print(f"gratuluji, vyhral jsi!\nPotřeboval jsi jen {pokusy} pokusy")
            break
    else:
        print("špatnej input")     

        

