import random

#   uvodni menu
print(
"""
+=================================+
|                                 |
|     B U L L S   &   C O W S     |
|                                 |
|    napiš 'info' pro pravidla    |
|     napiš 'start' pro start     |
+=================================+
""")

#   random definice kterou pouziju presne trikrat
def cara():
    print(75 * "-")

#   smycka pro info a nebo start
while True:
    prvni = input("")
    if prvni == "info":
        cara()
        print("Myslím si tajné 4místné číslo s unikátními číslicemi, které nezačíná nulou.\nTvým úkolem je ho uhodnout pomocí nápověd.\nBulls = správné číslo na správném místě.\nCows  = správné číslo na špatném místě.")
        cara()
        print("Tvůj tip musí obsahovat pouze číslice a nesmí začínat nulou.")
        cara()
        print("Pokud jsi připraven, napiš 'start'.")
        cara()
    elif prvni == "start":
        break


cislicove_cisla = list("0123456789")
number = 0
cislice = []

cislo = str(random.randint(1, 9))
cislice.append(cislo)
cislicove_cisla.remove(str(cislo))
cislice.extend(random.sample(cislicove_cisla, 3))

#print(cislice)

pokusy = 0
tip = 0
# cela smycka pak tip zkontroluje jestli splnuje podminky
while True:
    tip = list(input("zadej číslo:   "))
    #print(tip)

    if len(tip) == 4 and tip[0] != "0" and len(set(tip)) == 4 and "".join(tip).isnumeric():
        

    
        cows = 0
        bulls = 0

#   vyhodnoceni tipu 
        for i in range(4):
            if cislice[i] in tip:
                if cislice[i] == tip[i]:
                    bulls += 1
                else:
                    cows += 1
        print(f"bulls: {bulls}, cows: {cows}")
        pokusy += 1

#   zaver hry
        if bulls == 4:
            print(f"Gratuluji, vyhral jsi!\nPotřeboval jsi jen {pokusy} pokusů")
            break
    else:
        print("zadané číslo nesplňuje podmínky")  
        

